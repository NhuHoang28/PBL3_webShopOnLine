@model List<OnlineShop.Models.ChiTietShow>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <td>Mã sách</td>
                <td>Tên sách</td>
                <td>Hình ảnh</td>
                <td>Số lượng</td>
                <td>Đơn giá</td>
                <td>Thành tiền</td>
                <td>Khác</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.MaSach</td>
                <td>@item.TenSach</td>
                <td><img src="@item.HinhAnh" width="100"/> </td>
                <td>@item.SoLuong </td>
                <td>@item.DonGia </td>
                <td>@item.ThanhTien </td>
                <td> <a class="btn next" href="/User/Index"><span class="	glyphicon glyphicon-repeat"></span></a> </td>


            </tr>
            }

        </tbody>
    </table>
    <div>

    </div>

}


else
{
    <span class=" alert alert-danger">
        Bạn chưa đặt hàng lần nào
    </span>
}


