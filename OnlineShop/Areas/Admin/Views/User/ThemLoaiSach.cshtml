@model Model.EF.LoaiSach
@{
    ViewBag.Title = "ThemLoaiSach";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập loại sach
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        @using (Html.BeginForm("ThemLoaiSach", "User", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label class="small mb-1" for="inputPassword">Mã loai sach</label>
                                <input name="MaLoaiSach" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label class="small mb-1" for="inputPassword">Tên loai sach</label>
                                <input name="TenLoaiSach" class="form-control" />
                            </div>


                            <div class="form-group">
                                <div style="border=5px;padding=5px">
                                    <input type="submit" value="Create" class="btn btn-default" style="border: 1px solid #000000" />
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>


