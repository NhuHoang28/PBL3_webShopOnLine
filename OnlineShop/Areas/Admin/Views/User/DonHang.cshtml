@model List<Model.EF.DonHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

    <script src="~/Assets/client/js/controller/CartController.js"></script>


@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <td>Mã đơn hàng</td>
                <td>Ngày đặt</td>
                <td>Tên người nhận</td>
                <td>Số điện thoại người nhận</td>
                <td>Email</td>
                <td>Trạng thái</td>
                <td>Địa chỉ nhận </td>
                <td>Ghi chú </td>
                <td>Tổng tiền </td>
                <td>Khác </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDonHang</td>
                    <td>@item.NgayDat</td>
                    <td>@item.TenNguoiNhan </td>
                    <td>@item.SDTNguoiNhan </td>
                    <td>@item.Email </td>
                    <td>@item.TrangThai </td>
                    <td>@item.DiaChiNhan </td>
                    <td>@item.GhiChu   </td>
                    <td>@item.TongTien   </td>
                    <td> <a class="btn next" href="/Admin/User/ChiTietAdmin/@item.MaDonHang"><span class=""></span>Chi tiết</a> </td>
                </tr>
            }

        </tbody>
    </table>
    <div>

    </div>

}


else
{
    <span class=" alert alert-danger">
        Chưa đặt hàng lần nào
    </span>
}


